gitClone () {
  REPO=$1
  NAME=$(basename "$REPO" .git)

  shift
  MAIN_BRANCH=$1
  git clone --bare $REPO $NAME
  pushd "$PWD/$NAME"

  for BRANCH in "$@"
  do
    git worktree add $BRANCH
  done
  pushd "$PWD/$MAIN_BRANCH"
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    pushd $DOTFILES
    pushd personal
    git add .
    git commit -m "automagic message"
    git push origin main
    popd
    pushd work
    git add .
    git commit -m "automagic message"
    git push origin main
    popd
    pushd demo
    git add .
    git commit -m "automagic message"
    git push origin main
    popd
    git add .
    git commit -m "automagic message"
    git push origin main
    popd
}

commitAnsible() {
    pushd $ANSIBLEFILES
    git add .
    git commit -m "automagic message"
    git push origin main
    popd
}

export WORKSPACE=$HOME/Sources
