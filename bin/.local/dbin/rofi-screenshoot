#!/bin/bash
set -e

# choose state with rofi
choose_mode=$(echo -e "region\nwindow\noutput" | rofi -dmenu -p "Choose a mode")

if [ $choose_mode == "region" ]; then
    # select region
    hyprshot -m region
elif [ $choose_mode == "window" ]; then
    hyprshot -m window
elif [ $choose_mode == "output" ]; then
    hyprshot -m output
else
    echo "No valid mode selected."
    exit 1
fi
